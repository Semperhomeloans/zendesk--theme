<div class="container">
	{{breadcrumbs}}
</div>
<div class="container">
  <div class="row">
		<div class="col-lg-3 col-md-12 mb-lg-0 mb-sm-5 mb-5">
			<div class="list-group list-group-flush list-group--basic h4">
        <h3>Options</h3>
        <li class="list-group-item sub">{{t 'topics'}}</li>
        <li class="list-group-item sub">{{link 'posts'}}</li>
        <li class="list-group-item sub">{{link 'new_post' role='button'}}</li>
			</div>
		</div>


		<div class="col-lg-6 mb-lg-0 mb-sm-5 mb-5">
			<h1>
        {{t 'community'}}
      </h1>

      {{#if topics}}
        <ul class="topic-list">
          {{#each topics}}
            <li class="topic">
              <h3 class="topic-title">
                {{#if internal}}
                  <span class="visibility-internal" data-title="{{t 'internal'}}">
                    <span class="visibility-internal-icon"></span>
                  </span>
                {{/if}}
                <a href="{{url}}">{{name}}</a>
              </h3>
              <span class="topic-meta">
                <span>{{t 'post_count' count=post_count}}</span>
                <span>{{t 'follower_count' count=follower_count}}</span>
              </span>
            </li>
          {{/each}}
          {{pagination}}
        </ul>
      {{else}}
        <p>{{t 'no_content'}}</p>
      {{/if}}


		</div>

		<div class="col-lg-3 mb-lg-0 mb-sm-5 mb-5">
			<div class="list-group list-group-flush list-group--basic h4">
        <h3>Requests</h3>
			  <li class="list-group-item sub">{{t 'all'}}</li>
			</div>
		</div>

	
  </div>
</div>